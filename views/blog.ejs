<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blogs</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <img src="<%= blog.coverImageURL %>" class="img-thumbnail " width="40%" height="40%" alt="...">
        <h1 class="mt-1"><%= blog.title %></h1>
        <pre class="lead mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-3">
        <img src="<%= blog.createdBy.profileImgURL %>" width="30px"> <%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-3">
        <h5>Comments (<%= comments.length %>) </h5>
        <% comments.forEach(comment => { %>
            <div class="mt-1">
                <img src="<%=comment.createdBy.profileImgURL %>" width="20px">
                <%= comment.createdBy.fullName %>
                <%= comment.content %>  
            </div>
        <% }) %>
    </div>
    <div class="container mt-3" >
        <form action="/blog/comment/<%= blog._id %>" method="post" >
            <div class="mb-3">
              <input type="text" class="form-control" id="content" name="content" placeholder="Add a comment..." required>
            </div>  
            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
        </form>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>