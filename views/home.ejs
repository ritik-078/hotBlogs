<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <div class="row row-cols-3">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card col mt-4" style="width: 18rem">
                        <img src="<%=blog.coverImageURL %>" class="card-img-top" width="100px" height="200px" alt="...">
                        <div class="card-body">
                          <h4 class="card-title"><%= blog.title %></h4>
                          <a href="/blog/<%= blog._id %>" class="btn btn-dark btn-sm" >View Blog</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
</body>
</html>